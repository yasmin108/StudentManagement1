■MySQLメモ
（一連のコマンドを一通り実行してみましょう。）

//MySQL接続
mysql -u root -p
Enter password:****

//データベース一覧表示
show databases;
//データベース作成
create database studentmanagement_taimen2;
//使用データベース指定
use studentmanagement_taimen2;

//テーブル作成
create table students(
student_id varchar(36) not null primary key,
name varchar(50) not null,
kana_name varchar(50) not null,
nickname varchar(50),
email varchar(50),
area varchar(50),
age int,
sex varchar(10)
) DEFAULT CHARSET=utf8;


create table students_courses(
course_id varchar(36) not null primary key,
student_id varchar(36) not null,
course_name varchar(50) not null,
start_date timestamp,
end_date timestamp
) DEFAULT CHARSET=utf8;


//テーブル一覧表示
show tables;

//レコード作成
insert students(student_id, name, kana_name, nickname, email, area, age, sex) values('s0001','山田太郎', 'ヤマダタロウ','タロー', 't-yamada@gmail.com', '東京都新宿区', 20, '男性');
